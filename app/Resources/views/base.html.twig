<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}ToDo !{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href='{{ asset('bundles/components/bootstrap/css/bootstrap.min.css') }}'/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">

            <div class="row">
                <div style="margin-top:50px" class="col-md-12">
                {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}
            <script type="text/javascript" src='{{ asset('bundles/components/jquery/jquery.min.js') }}'></script>
            <script type="text/javascript" src='{{ asset('bundles/components/jquery-ui/jquery-ui.min.js') }}'></script>
            <script type="text/javascript" src='{{ asset('bundles/components/bootstrap/js/bootstrap.min.js') }}'></script>
        {% endblock %}
    </body>
</html>
